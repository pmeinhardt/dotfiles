# Ruby

snippet #! "#!/usr/bin/env ruby" b
#!/usr/bin/env ruby
endsnippet

snippet main "if __FILE__ == $0" b
if __FILE__ == \$0
	${VISUAL}$0
end
endsnippet

snippet module "module" b
module ${1:A}
	${VISUAL}$0
end
endsnippet

snippet class "class + initialize" b
class ${1:A}
	def initialize(${2:*args})
		$0
	end
end
endsnippet

snippet def "def" b
def ${1:f}
	${VISUAL}$0
end
endsnippet

snippet do "do _ end" w
do
	${VISUAL}$0
end
endsnippet

snippet dox "do |_| _ end" w
do |${1:x}|
	${VISUAL}$0
end
endsnippet

# RSpec

snippet describe "describe '_' do _ end" b
describe '$1' do
	${VISUAL}$0
end
endsnippet

snippet it "it '_' do _ end" b
it '$1' do
	${VISUAL}$0
end
endsnippet

snippet before "before { _ }" b
before { ${0:${VISUAL}} }
endsnippet

snippet after "after { _ }" b
after { ${0:${VISUAL}} }
endsnippet

snippet subject "subject { _ }" b
subject { ${0:${VISUAL}} }
endsnippet

snippet let "let(:_) { _ }" b
let(:${1:name}) { ${0:${VISUAL}} }
endsnippet

snippet expect "expect(_).to _(_)" b
expect(${1:actual}).${2:to} ${3:be}(${4:expected})
endsnippet
