# Elixir

snippet #! "#!/usr/bin/env elixir" b
#!/usr/bin/env elixir
endsnippet

snippet defmodule "defmodule" b
defmodule ${1:A} do
	${0:${VISUAL}}
end
endsnippet

snippet def "def" b
def ${1:f} do
	${2:${VISUAL}}
end
endsnippet

snippet defp "defp" b
defp ${1:f} do
	${2:${VISUAL}}
end
endsnippet

snippet fn "fn" w
fn $1-> ${2:nil} end
endsnippet

snippet do "do" w
do
	${1:${VISUAL}}
end
endsnippet

snippet case "case" w
case ${1:value} do
	${2:_} ->
		${3:nil}

	${4:other} ->
		${5:$4}
end
endsnippet

snippet with "with" w
with ${1::ok} <- ${2:expression} do
	${3:${VISUAL}}
end
endsnippet

# ExUnit

snippet describe "describe" b
describe "$1" do
	${2:${VISUAL}}
end
endsnippet

snippet test "test" b
test "$1" do
	${2:${VISUAL}}
end
endsnippet
