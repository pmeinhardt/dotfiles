# Local/private config goes in the include
[include]
        path = ~/.gitconfig.local
[user]
        useConfigOnly = true
[init]
        defaultBranch = main
[core]
        excludesFile = ~/.gitignore
[alias]
        b       = branch
        co      = checkout
        count   = !git shortlog -sn
        promote = !$ZSH/bin/git-promote
        s       = status
[color]
        diff    = auto
        status  = auto
        branch  = auto
[apply]
        whitespace = nowarn
[pull]
        ff = only
[push]
        default = simple
