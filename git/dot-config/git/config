# Local/private config goes in the include
[include]
        path = ~/.config/git/config.local
[core]
        excludesFile = ~/.config/git/ignore
[user]
        useConfigOnly = true
[init]
        defaultBranch = main
[alias]
        b       = branch
        co      = checkout
        count   = !git shortlog -sn
        promote = !$ZSH/bin/git-promote
        s       = status
[color]
        diff    = auto
        status  = auto
        branch  = auto
[apply]
        whitespace = nowarn
[merge]
        conflictStyle = zdiff3
[pull]
        ff = only
[push]
        default = simple
